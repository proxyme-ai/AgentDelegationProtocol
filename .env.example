# Agent Delegation Protocol Configuration

# JWT Configuration
JWT_SECRET=super-secure-jwt-signing-secret-key-for-agent-delegation-protocol-demo

# Token Expiry (in minutes)
ACCESS_TOKEN_EXPIRY_MINUTES=5
DELEGATION_TOKEN_EXPIRY_MINUTES=10

# File paths for data storage
AGENTS_FILE=agents.json
USERS_FILE=users.json

# Server Configuration
AUTH_SERVER_HOST=localhost
AUTH_SERVER_PORT=5000
RESOURCE_SERVER_HOST=localhost
RESOURCE_SERVER_PORT=6000
FRONTEND_PORT=7000

# Keycloak Integration (optional)
KEYCLOAK_URL=https://your-keycloak-instance.com
KEYCLOAK_REALM=your-realm
KEYCLOAK_CLIENT_ID=your-client-id
KEYCLOAK_CLIENT_SECRET=your-client-secret
REDIRECT_URI=http://localhost:5000/callback

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:7000,http://localhost:8080
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s